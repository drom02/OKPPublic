<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OKP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Old Primary brand color.

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
       -->
        <!-- new primary brand color . -->
        <item name="colorPrimary">@color/red_1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_1</item>
        <item name="android:colorBackground">@color/white_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_1</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OKP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OKP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OKP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>